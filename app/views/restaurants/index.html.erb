
  <div id="header">
    <h1>My list of restaurants</h1>
  </div>
  <div class="container">
    <% @restaurants.each do |restaurant| %>
        <div class="card">
        <h3><%= restaurant.name %></h3>
        <p><%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%></p>
        <br>
        </div>
    <% end %>
  </div>
  <p class="button"><%= link_to "Create a new restaurant", new_restaurant_path, class: "btn btn-primary"%></p>

